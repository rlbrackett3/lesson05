<h2>SIGN IN FORM</h2>
<%= form_tag sessions_path do %>
	<fieldset>
		<div class="fields">
			<%= label_tag :fullname %><%= text_field_tag :fullname, params[:fullname] %>
		
		<br>
		
			<%= label_tag :email %><%= text_field_tag :email, params[:email] %>
		</div>

		<div class="actions">
			<%= submit_tag "Sign in", id: "sign-in", name: "sign-in", class: "form_submit", disabled: false, disable_with: "Please wait..."%>
		</div>
		<!-- only need one submit button to allow the user to sign in and create a session -->
		<!-- try to avoid too much copy and paste coding as it general creates more mess and confusion -->
	</fieldset>
<% end %>	
